@mixin font($size, $height, $weight) {
    font-size: $size;
    line-height: $height;
    font-weight: $weight;
}

@mixin tablet {
    @media (max-width: $desktop-width) {
        @content;
    }
}

@mixin mobile {
    @media (max-width: $tablet-width) {
        @content;
    }
}

@mixin min-mobile {
    @media (max-width: $mobile-width) {
        @content;
    }
}
